{
  "type": "module",
  "name": "sistema-ticket",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:gen:local": "env-cmd -f .env.local prisma generate",
    "db:push:local": "env-cmd -f .env.local prisma db push",
    "db:migrate:local": "env-cmd -f .env.local prisma migrate dev",
    "db:reset:local": "env-cmd -f .env.local prisma migrate reset",
    "db:gen:docker": "env-cmd -f .env.docker prisma generate",
    "db:push:docker": "env-cmd -f .env.docker prisma db push",
    "db:migrate:docker": "env-cmd -f .env.docker prisma migrate dev",
    "db:reset:docker": "env-cmd -f .env.docker prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@sveltejs/adapter-node": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "mime": "^4.0.2"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.5.3",
    "@sveltejs/vite-plugin-svelte": "^3.0.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.19",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.0",
    "prisma": "^6.5.0",
    "svelte": "^5.0.0-next.1",
    "svelte-check": "^3.7.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "zod": "^3.23.8",
    "env-cmd": "^10.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "@sveltejs/kit": "^2.5.3",
    "@sveltejs/vite-plugin-svelte": "^3.0.3",
    "eslint-plugin-svelte": "^2.35.1"
  }
}
